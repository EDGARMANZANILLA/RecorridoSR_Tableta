<?xml version="1.0" encoding="utf-8"?>
<TableLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:alignmentMode="alignBounds"
    android:background="#FFFFFF"
    android:columnCount="2"
    android:rowCount="4"
    tools:context=".MainActivity">


    <TableRow>
        <TextView
            android:id="@+id/textView0"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_row="2"
            android:layout_column="0"
            android:text="." />

        <TextView
            android:id="@+id/textView1"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:layout_row="0"
            android:layout_column="0"
            android:text="." />



    </TableRow>



    <TableRow>
        <ImageView
            android:id="@+id/imageView"
            android:layout_width="178dp"
            android:layout_height="225dp"
            android:layout_row="1"
            android:layout_column="0"
            android:layout_gravity="right"
            android:onClick="campeche"
            app:srcCompat="@drawable/campeche" />

        <ImageView
            android:id="@+id/imageView3"
            android:layout_width="184dp"
            android:layout_height="221dp"
            android:layout_row="3"
            android:layout_column="1"
            android:layout_gravity="left"
            android:onClick="quintanaroo"
            app:srcCompat="@drawable/qqq" />


    </TableRow>


    <TableRow>
        <TextView
            android:id="@+id/textView"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_row="2"
            android:layout_column="0"
            android:text="." />

        <TextView
            android:id="@+id/textView2"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:layout_row="0"
            android:layout_column="0"
            android:text="." />



    </TableRow>



    <TableRow>

        <ImageView
            android:id="@+id/imageView2"
            android:layout_width="180dp"
            android:layout_height="200dp"
            android:layout_row="3"
            android:layout_column="0"
            android:layout_gravity="right"
            android:onClick="tabasco"
            app:srcCompat="@drawable/tabasco" />

        <ImageView
            android:id="@+id/imageView1"
            android:layout_width="165dp"
            android:layout_height="226dp"
            android:layout_row="1"
            android:layout_column="1"
            android:layout_gravity="left"
            android:onClick="yucatan"
            app:srcCompat="@drawable/merida1" />


    </TableRow>






</TableLayout>