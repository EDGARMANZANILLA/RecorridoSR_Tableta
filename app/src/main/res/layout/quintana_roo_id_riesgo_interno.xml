<?xml version="1.0" encoding="utf-8"?>
<TableLayout xmlns:android="http://schemas.android.com/apk/res/android"
xmlns:app="http://schemas.android.com/apk/res-auto"
xmlns:tools="http://schemas.android.com/tools"
android:layout_width="match_parent"
android:layout_height="match_parent"
android:padding="5dp"
tools:context=".quintanaroo_id_riesgo_interno"
android:stretchColumns="1">

<TableRow android:background="#128675">

    <TextView
        android:layout_column="0"
        android:padding="0dip"
        android:text="IDENTIFICACION DEL INMUEBLE"
        android:textColor="@android:color/white" />
\
</TableRow>

<ScrollView
    android:layout_width="match_parent"
    android:layout_height="wrap_content">
    <TableLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <!--- Tanques- 1  -->
        <TableRow>

            <TextView
                android:id="@+id/textView1"
                android:layout_width="150dp"
                android:layout_column="0"
                android:padding="2dip"
                android:text="Nombre del responsable(Legal o poseedor) "
                android:textColor="#000000" />


        </TableRow>
        <EditText
            android:id="@+id/editText1"
            android:layout_column="0"
            android:layout_width="289dp"
            android:layout_height="42dp"
            android:ems="10"
            android:hint="      ingresa el nombre del responsable"
            android:inputType="textPersonName"
            android:textColor="#3260F5"
            android:nextFocusDown="@id/editText2"
            android:theme="@style/EditText">

        </EditText>


        <!--- Torres - 2-->
        <TableRow>

            <TextView
                android:id="@+id/textView2"
                android:layout_width="247dp"
                android:layout_column="0"
                android:padding="2dip"
                android:text="Responsable del programa interno de Proteccion Civil"
                android:textColor="#000000"/>




        </TableRow>
        <EditText
            android:id="@+id/editText2"
            android:layout_column="0"
            android:layout_width="289dp"
            android:layout_height="42dp"
            android:ems="10"
            android:hint="     ingresa al resp. del programa interno"
            android:inputType="textPersonName"
            android:textColor="#3260F5"
            android:nextFocusDown="@id/editText1">

        </EditText>


        <!--- Antenas - 3-->
        <TableRow>

            <TextView
                android:id="@+id/textView3"
                android:layout_width="247dp"
                android:layout_column="0"
                android:padding="2dip"
                android:text="Telefono"
                android:textColor="#000000" />


        </TableRow>
        <EditText
            android:id="@+id/editText3"
            android:layout_column="0"
            android:layout_width="289dp"
            android:layout_height="42dp"
            android:ems="10"
            android:hint="      ingresa el no. telefonico"
            android:inputType="number">

        </EditText>


        <!--- Postes de Elect - 4-->
        <TableRow>

            <TextView
                android:id="@+id/textView4"
                android:layout_width="247dp"
                android:layout_column="0"
                android:padding="2dip"
                android:text="Fax"
                android:textColor="#000000" />


        </TableRow>
        <EditText
            android:id="@+id/editText4"
            android:layout_column="0"
            android:layout_width="289dp"
            android:layout_height="42dp"
            android:ems="10"
            android:hint="ingresa el fax"
            android:inputType="textPersonName">

        </EditText>




        <!--- Postes de Telefono - 5 -->
        <TableRow>

            <TextView
                android:id="@+id/textView5"
                android:layout_width="247dp"
                android:layout_column="0"
                android:padding="2dip"
                android:text="Domicilio (Calle y Numero)"
                android:textColor="#000000" />



        </TableRow>

        <EditText
            android:id="@+id/editText5"
            android:layout_width="289dp"
            android:layout_height="wrap_content"
            android:layout_column="0"
            android:ems="10"
            android:hint="      ingresa el numero de la calle y numero"
            android:inputType="text">

        </EditText>




        <!--- Alumbrado publico - 6 -->
        <TableRow>

            <TextView
                android:id="@+id/textView6"
                android:layout_width="247dp"
                android:layout_column="0"
                android:padding="2dip"
                android:text="Cruzamientos"
                android:textColor="#000000" />


        </TableRow>
        <EditText
            android:id="@+id/editText6"
            android:layout_column="0"
            android:layout_width="289dp"
            android:layout_height="42dp"
            android:ems="10"
            android:hint="      ingresa los cruzamientos"
            android:inputType="textPersonName">

        </EditText>



        <!--- Transformadores de electricidad - 7 -->
        <TableRow>

            <TextView
                android:id="@+id/textView7"
                android:layout_width="247dp"
                android:layout_column="0"
                android:padding="2dip"
                android:text="Colonia"
                android:textColor="#000000" />


        </TableRow>
        <EditText
            android:id="@+id/editText7"
            android:layout_column="0"
            android:layout_width="289dp"
            android:layout_height="42dp"
            android:ems="10"
            android:hint="      ingrese la colonia del inmueble"
            android:inputType="textPersonName">

        </EditText>


        <!--- Alcantarillas y registros abiertos- 8  -->
        <TableRow>

            <TextView
                android:id="@+id/textView8"
                android:layout_width="247dp"
                android:layout_column="0"
                android:padding="2dip"
                android:text="Municipio"
                android:textColor="#000000" />


        </TableRow>
        <EditText
            android:id="@+id/editText8"
            android:layout_width="289dp"
            android:layout_height="wrap_content"
            android:layout_column="0"
            android:ems="10"
            android:hint="     ingrese el municipio"
            android:inputType="textPersonName">

        </EditText>


        <TextView
            android:layout_width="247dp"
            android:layout_column="0"
            android:padding="1dip"
            android:text="Ubicacion Geografica:"
            android:textColor="#000000" />
        <!--- Bardas, Mallas o Cercas, para delimitar territorial o contra robos- 9  -->
        <TableRow>

            <TextView
                android:id="@+id/textView9"
                android:layout_width="247dp"
                android:layout_column="0"
                android:padding="2dip"
                android:text="    Localidad"
                android:textColor="#000000" />



        </TableRow>
        <EditText
            android:id="@+id/editText9"
            android:layout_column="0"
            android:layout_width="289dp"
            android:layout_height="42dp"
            android:ems="10"
            android:hint="             ingrese la localidad"
            android:inputType="textPersonName">

        </EditText>


        <!--- Banquetas desniveladas- 10  -->
        <TableRow>

            <TextView
                android:id="@+id/textView10"
                android:layout_width="247dp"
                android:layout_column="0"
                android:padding="2dip"
                android:text="    Longitud"
                android:textColor="#000000" />


        </TableRow>
        <EditText
            android:id="@+id/editText10"
            android:layout_column="0"
            android:layout_width="289dp"
            android:layout_height="42dp"
            android:ems="10"
            android:hint="             ingrese la longitud"
            android:inputType="textPersonName">

        </EditText>


        <!---   - 11  -->
        <TableRow>

            <TextView
                android:id="@+id/textView11"
                android:layout_width="247dp"
                android:layout_column="0"
                android:padding="2dip"
                android:text="Giro o actividad del inmueble"
                android:textColor="#000000" />


        </TableRow>
        <EditText
            android:id="@+id/editText11"
            android:layout_column="0"
            android:layout_width="289dp"
            android:layout_height="42dp"
            android:ems="10"
            android:hint="      ingresa la actividad del inmueble"
            android:inputType="textPersonName">

        </EditText>




        <!---   - 12  -->
        <TableRow>

            <TextView
                android:id="@+id/textView12"
                android:layout_width="247dp"
                android:layout_column="0"
                android:padding="2dip"
                android:text="No. de niveles. (Incluyendo. Sotan0, entre pisos y anexos)."
                android:textColor="#000000" />


        </TableRow>
        <EditText
            android:id="@+id/editText12"
            android:layout_column="0"
            android:layout_width="289dp"
            android:layout_height="42dp"
            android:ems="10"
            android:hint="      ingresa el no. de niveles"
            android:inputType="number">

        </EditText>


        <!---   - 13  -->
        <TableRow>

            <TextView
                android:id="@+id/textView13"
                android:layout_width="247dp"
                android:layout_column="0"
                android:padding="2dip"
                android:text="Superfie total (m2)"
                android:textColor="#000000" />



        </TableRow>
        <EditText
            android:id="@+id/editText13"
            android:layout_column="0"
            android:layout_width="289dp"
            android:layout_height="42dp"
            android:ems="10"
            android:hint="      ingresa la superficie total en m2"
            android:inputType="textPersonName">

        </EditText>



        <!---   - 14  -->
        <TableRow>

            <TextView
                android:id="@+id/textView14"
                android:layout_width="247dp"
                android:layout_column="0"
                android:padding="2dip"
                android:text="Superficie Construida (m2)"
                android:textColor="#000000" />


        </TableRow>
        <EditText
            android:id="@+id/editText14"
            android:layout_column="0"
            android:layout_width="289dp"
            android:layout_height="42dp"
            android:ems="10"
            android:hint="      ingresa la superficie construida en m2"
            android:inputType="textPersonName">

        </EditText>


        <!---   - 15  -->
        <TableRow>

            <TextView
                android:id="@+id/textView15"
                android:layout_width="247dp"
                android:layout_column="0"
                android:padding="2dip"
                android:text="Antigüedad del inmueble o instalación (años):"
                android:textColor="#000000" />



        </TableRow>
        <EditText
            android:id="@+id/editText15"
            android:layout_column="0"
            android:layout_width="289dp"
            android:layout_height="42dp"
            android:ems="10"
            android:hint="      ingrese la antigüedad del inmueble"
            android:inputType="number">

        </EditText>





        <!---   - 16  -->
        <TableRow>

            <TextView
                android:id="@+id/textView16"
                android:layout_width="247dp"
                android:layout_column="0"
                android:padding="2dip"
                android:text="Población fija:"
                android:textColor="#000000" />


        </TableRow>
        <EditText
            android:id="@+id/editText16"
            android:layout_column="0"
            android:layout_width="289dp"
            android:layout_height="42dp"
            android:ems="10"
            android:hint="      ingresa la poblacion"
            android:inputType="textPersonName">

        </EditText>


        <!---   - 17  -->
        <TableRow>

            <TextView
                android:id="@+id/textView17"
                android:layout_width="247dp"
                android:layout_column="0"
                android:padding="2dip"
                android:text="Población flotante:"
                android:textColor="#000000" />

            <Spinner
                android:id="@+id/spinner17"
                android:layout_width="120dp"
                android:layout_height="wrap_content"
                android:layout_column="1"
                android:padding="3dip">


            </Spinner>

        </TableRow>
        <EditText
            android:id="@+id/editText17"
            android:layout_column="0"
            android:layout_width="289dp"
            android:layout_height="42dp"
            android:ems="10"
            android:hint="      ingresa la oblación flotante:"
            android:inputType="textPersonName">

        </EditText>


        <!--- ///////////////////////////////////////////////////////////////////////////////////////////////////////////////////// -->



        <Button
            android:id="@+id/button"
            android:layout_width="match_parent"
            android:layout_height="match_parent"

            android:text="siguiente"
            android:textSize="14sp">

        </Button>




    </TableLayout>

</ScrollView>

</TableLayout>